<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyVersion>1.1.2.0</AssemblyVersion>
    <FileVersion>1.1.2.0</FileVersion>
    <ApplicationIcon>RenameSmartphonePhotos.ico</ApplicationIcon>
    <Version>$(AssemblyVersion)</Version>
    <Copyright>Copyright (c) 2025 NataljaNeumann@gmx.de</Copyright>
    <PackageProjectUrl>https://github.com/NataljaNeumann/RenameSmartphonePhotos</PackageProjectUrl>
    <PackageIcon>RenameSmartphonePhotos.ico</PackageIcon>
    <RepositoryUrl>https://github.com/NataljaNeumann/RenameSmartphonePhotos.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>GPL-2.0-or-later</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <IsPublishable>False</IsPublishable>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <IsPublishable>False</IsPublishable>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="RenameSmartphonePhotos.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="Readme.html">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Readme.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="RenameSmartphonePhotos.ico">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="RenameSmartphonePhotosHeader.dat">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="if &quot;$(ConfigurationName)&quot; == &quot;Release&quot; (&#xD;&#xA;  if NOT EXIST &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ&quot; (&#xD;&#xA;    mkdir  &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ&quot;&#xD;&#xA;    mkdir  &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ\$(ProjectName)&quot;&#xD;&#xA;  )&#xD;&#xA;  copy /Y &quot;$(SolutionDir)*.sln&quot; &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ\&quot;&#xD;&#xA;  copy /Y &quot;$(SolutionDir)LICENSE.TXT&quot; &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ\&quot;&#xD;&#xA;  copy /Y &quot;$(SolutionDir)LICENSE.TXT&quot; &quot;$(TargetDir)license.txt&quot;&#xD;&#xA;  copy /Y &quot;$(SolutionDir)README.md&quot; &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ\&quot;&#xD;&#xA;  copy /Y &quot;$(SolutionDir)README.md&quot; &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ\&quot;&#xD;&#xA;  copy /Y &quot;$(ProjectDir)*.csproj&quot; &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ\$(ProjectName)\&quot;&#xD;&#xA;  copy /Y &quot;$(SolutionDir).gitignore&quot; &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ\&quot;&#xD;&#xA;  copy /Y &quot;$(ProjectDir)*.cs&quot; &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ\$(ProjectName)\&quot;&#xD;&#xA;  copy /Y &quot;$(ProjectDir)*.ico&quot; &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ\$(ProjectName)\&quot;&#xD;&#xA;  copy /Y &quot;$(ProjectDir)*.dat&quot; &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ\$(ProjectName)\&quot;&#xD;&#xA;  copy /Y &quot;$(ProjectDir)Readme.*&quot; &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ\$(ProjectName)\&quot;&#xD;&#xA;  copy /Y &quot;$(ProjectDir)*.resx&quot; &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ\$(ProjectName)\&quot;&#xD;&#xA;  cd /D &quot;$(TargetDir)ZZ_SOURCE_CODE_ZZ&quot;&#xD;&#xA;  tar.exe -cf &quot;..\source_code.tar&quot; *.*&#xD;&#xA;  cd ..&#xD;&#xA;  tar.exe -a -c -f source_code.tar.zip source_code.tar&#xD;&#xA;  del /Q source_code.tar&#xD;&#xA;  cd /D &quot;$(TargetDir)&quot;&#xD;&#xA;  del /F /S /Q ZZ_SOURCE_CODE_ZZ&#xD;&#xA;  rmdir /S /Q ZZ_SOURCE_CODE_ZZ&#xD;&#xA;  del /Q &quot;*.pdb&quot;&#xD;&#xA;  tar.exe -a -c -f ..\..\$(ProjectName)_v$(AssemblyVersion).zip *.*&#xD;&#xA;)&#xD;&#xA;" />
  </Target>

</Project>